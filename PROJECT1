  x=30, y=60

  wlan { }

  lan to CSSE {
    nicaddr = 00:90:27:62:58:84
  }
}

accesspoint AP2 {
  x=130, y=60

  wlan { }

  lan to CSSE {
    nicaddr = 00:90:27:41:B0:BE
  }
}

